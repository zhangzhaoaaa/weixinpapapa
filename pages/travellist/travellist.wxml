<view class="body">
        <view class="widgets">
            <view class="widgets__item">
                <toast hidden="{{toast2Foot}}" duration="1000" bindchange="toastChangeFoot">
                    大哥，你玩我呢？
                </toast>
                <toast hidden="{{toast2Train}}" duration="1000" bindchange="toastChangeTrain">
                    抢不到票啊
                </toast>
                <view class="widgets__list widgets__list_show">
                    <view bindtap="bindViewNavigator" data-source="plane" class="widget">
                        <text class="widget__name">飞机</text>
                        <image class="widget__arrow" src="resources/arrow.png" background-size="cover" />
                        <view class="widget__line"></view>
                    </view>
                    <view bindtap="bindViewNavigator" data-source="train" class="widget">
                        <text class="widget__name">火车</text>
                        <image class="widget__arrow" src="resources/arrow.png" background-size="cover" />
                        <view class="widget__line"></view>
                    </view>
                    <view bindtap="bindViewNavigator" data-source="foot" class="widget">
                        <text class="widget__name">步行</text>
                        <image class="widget__arrow" src="resources/arrow.png" background-size="cover" />
                        <view class="widget__line"></view>
                    </view>
                </view>
            </view>
        </view>
</view>